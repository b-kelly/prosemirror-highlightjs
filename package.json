        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-jest": "^26.5.3",
        "highlight.js": "11.5.1",
        "jest": "^28.1.1",
        "jest-environment-jsdom": "^28.1.1",
        "prettier": "^2.6.2",
        "prosemirror-commands": "^1.3.0",
