    "description": "ProseMirror plugin to highlight code with highlight.js",
    "type": "module",
    "keywords": [
        "prosemirror",
        "highlightjs",
        "highlight.js"
    ],
    "homepage": "https://github.com/b-kelly/prosemirror-highlightjs",
    "license": "MIT",
    "author": "Ben Kelly",
    "main": "dist/index.umd.cjs",
