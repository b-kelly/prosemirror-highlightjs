{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ESNext",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "lib": ["ESNext", "DOM"],
        "useDefineForClassFields": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "noUnusedParameters": true,
        "skipLibCheck": true
    },
    "include": ["src"]
}
