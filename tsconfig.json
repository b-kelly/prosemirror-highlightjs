{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "es6",
        "target": "es5",
        "allowJs": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "declaration": true,
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": true
    },
    "include": ["./src/**/*"]
}
